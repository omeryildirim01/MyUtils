        android:orientation="horizontal"
        android:padding="0dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41dp"
        android:background="@drawable/small_vedio_comment_item_button" />
